pipeline {
  agent {
    docker {
      image 'abhishekf5/maven-abhishek-docker-agent:v1'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // mount Docker socket to access the host's Docker daemon
    }
  }
  stages {
    stage('Checkout') {
      steps {
        sh 'echo passed'
        //git branch: 'main', url: 'https://github.com/imsalmanmalik/Jenkins-Maven-Sonar-ArgoCD-K8s.git'
      }
    }
    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        // build the project and create a JAR file
        sh 'cd spring-boot-websocket-chat-app-main && mvn clean package'
      }
    }
    stage('Static Code Analysis with sonarqube') {
      environment {
        SONAR_URL = "http://13.50.106.44:9000" // replace with the public ip-address of the instance you are using
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh 'cd spring-boot-websocket-chat-app-main && mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
        }
      }
    }
    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "ousmane1999/chat-app:${BUILD_NUMBER}"
        // DOCKERFILE_LOCATION = "spring-boot-app/Dockerfile"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            sh 'cdspring-boot-websocket-chat-app-main && docker build -t ${DOCKER_IMAGE} .'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                dockerImage.push()
            }
        }
      }
    }
    stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "springBoot-online-chat-app-sonarqube-argocd-k8s-devops"
            GIT_USER_NAME = "sangaryousmane"
        }
        steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    git config user.email "sangaryousmane@gmail.com"
                    git config user.name "Ousmane Sangary
                    BUILD_NUMBER=${BUILD_NUMBER}
                    git pull origin main

                    # Clean up build artifacts and untracked files
                    git clean -df
                    git reset --hard HEAD

                    # Update the deployment file
                    sed -i "s|image: salmanmalik98/jenkins-cicd:.*|image: salmanmalik98/jenkins-cicd:${BUILD_NUMBER}|" spring-boot-app-manifests/deployment.yml
                    git add springBoot-online-chat-app-sonarqube-argocd-k8s-devops/k8s/chat-deployment.yaml
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
            }
        }
    }
  }
}